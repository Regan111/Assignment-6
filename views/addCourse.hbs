<form action="/courses/add" method="POST">
  <div class="form-group">
    <label for="courseCode">Please enter the course code:</label>
    <input type="text" class="form-control" id="courseCode" name="courseCode" placeholder="Enter course code here" required>
  </div>
  
  <div class="form-group">
    <label for="courseDescription">Please enter the course description:</label>
    <input type="text" class="form-control" id="courseDescription" name="courseDescription" placeholder="Enter course description here" required>
  </div>
  
  <button type="submit" class="btn btn-primary">Add Course</button>
</form>
